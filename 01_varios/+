#include <stdio.h>
#include <stdlib.h>

int main(){
    int n,x=1,contador=0;
    printf("Introduce un n√∫mero:\n");
    scanf("%i",&n);
        while(x,x=x+1,x<n){
          if (n%x==0){
              contador+=x;
          }
        }
      if (contador==n){
          printf("ES PERFECTO");
      }
     else{
         printf("NO ES PERFECTO");
     }
    return EXIT_SUCCESS;
}
